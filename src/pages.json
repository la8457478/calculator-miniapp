{
    "easycom": {
        "autoscan": true,
        "custom": {
            "^qiun-(.*)$": "@/components/qiun-$1/qiun-$1.vue"
        }
    },
    "pages": [
        {
            "path": "pages/calculator/index",
            "style": {
                "navigationBarTitleText": "计算器"
            }
        },
        {
            "path": "pages/history/index",
            "style": {
                "navigationBarTitleText": "历史记录"
            }
        },
        {
            "path": "pages/positions/index",
            "style": {
                "navigationBarTitleText": "持仓管理"
            }
        },
        {
            "path": "pages/futures/index",
            "style": {
                "navigationBarTitleText": "期货行情"
            }
        },
        {
            "path": "pages/futures/chart",
            "style": {
                "navigationBarTitleText": "周线详情"
            }
        },
        {
            "path": "pages/stocks/index",
            "style": {
                "navigationBarTitleText": "股票季线"
            }
        },
        {
            "path": "pages/stocks/detail",
            "style": {
                "navigationBarTitleText": "K线详情"
            }
        }
    ],
    "tabBar": {
        "color": "#999",
        "selectedColor": "#6366f1",
        "backgroundColor": "#1a1a2e",
        "borderStyle": "black",
        "list": [
            {
                "pagePath": "pages/calculator/index",
                "text": "计算器",
                "iconPath": "static/tabbar/calc.png",
                "selectedIconPath": "static/tabbar/calc-active.png"
            },
            {
                "pagePath": "pages/history/index",
                "text": "历史",
                "iconPath": "static/tabbar/history.png",
                "selectedIconPath": "static/tabbar/history-active.png"
            },
            {
                "pagePath": "pages/positions/index",
                "text": "持仓",
                "iconPath": "static/tabbar/pos.png",
                "selectedIconPath": "static/tabbar/pos-active.png"
            },
            {
                "pagePath": "pages/futures/index",
                "text": "期货",
                "iconPath": "static/tabbar/futures.png",
                "selectedIconPath": "static/tabbar/futures-active.png"
            },
            {
                "pagePath": "pages/stocks/index",
                "text": "股票",
                "iconPath": "static/tabbar/stocks.png",
                "selectedIconPath": "static/tabbar/stocks-active.png"
            }
        ]
    },
    "globalStyle": {
        "navigationBarTextStyle": "white",
        "navigationBarTitleText": "交易计算器",
        "navigationBarBackgroundColor": "#0f0f23",
        "backgroundColor": "#0f0f23"
    }
}